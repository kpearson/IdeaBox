<div class="hero-unit">
  <div class="row">
    <div class="span3 offset4">
      <h1>IdeaBox</h1>
      <br><br>
      <form action='/' method='POST'>
      <fieldset>
        <legend>Your Idea:</legend>
        <input type='text' name='idea[title]'/><br/>
        <textarea name='idea[description]'></textarea><br/>
        <input class="btn btn-primary" type='submit'/>
      </fieldset>
      </form>
    </div>
  </div>
</div>

<div class="row">
    <div class="span5 offset2">
    <h3>The Idea Bank</h3>

    <ul>
      <% ideas.each do |idea| %>
        <li>
          <form action='/<%= idea.id %>/like' method='POST' style="display: inline">
            <input type='submit' value="+"/>
          </form>
          <%= idea.title %><br/>
          <%= idea.description %><br/>
          <%= idea.formatted_created_at %><br/>
          <a class="btn btn-info" href="/<%= idea.id %>/edit">Edit</a>
          <form action="/<%= idea.id %>" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <input class="btn btn-danger" type="submit" value="delete"/>
          </form>
        </li>
      <% end %>
    </ul>
  </div>
</div>
